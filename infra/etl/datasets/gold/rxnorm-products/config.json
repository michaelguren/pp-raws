{
  "dataset": "rxnorm-products",
  "description": "RxNORM Products GOLD layer - Temporally versioned RxNORM drug product data with status partitioning",
  "layer": "gold",
  "data_size_category": "medium",
  "source_datasets": ["rxnorm-products"],
  "schedule": {
    "enabled": false,
    "expression": "cron(0 5 5 * ? *)",
    "description": "Monthly on the 5th at 5am (after silver layer completes)"
  },
  "dependencies": {
    "silver_tables": ["silver_rxnorm_products"]
  },
  "temporal_config": {
    "business_key": "rxcui",
    "business_columns": [
      "tty",
      "str",
      "strength",
      "ingredient_names",
      "brand_names",
      "dosage_forms",
      "psn",
      "sbdf_rxcui",
      "sbdf_name",
      "scdf_rxcui",
      "scdf_name",
      "sbd_rxcui",
      "bpck_rxcui",
      "multi_ingredient"
    ]
  },
  "partitioning": {
    "strategy": "status",
    "values": ["current", "historical"]
  },
  "data_quality": {
    "critical_null_threshold": 0.05,
    "required_columns": ["rxcui", "version_id", "active_from", "active_to", "status"],
    "expected_record_count_min": 1000
  }
}
